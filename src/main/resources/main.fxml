<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controller.MainController"
      spacing="10" style="-fx-padding: 10;">

    <TableView fx:id="personTable">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Name"/>
        <TextField fx:id="emailField" promptText="Email"/>
    </HBox>

    <HBox spacing="10">
        <Button fx:id="addButton" text="Add"/>
        <Button fx:id="updateButton" text="Update"/>
        <Button fx:id="deleteButton" text="Delete"/>
    </HBox>
</VBox>
